<!DOCTYPE html>
<html lang="en">
<head>
	{{>head title=metadata.theme.config.browser.title}}
</head>
<body{{#if metadata.admin }} data-admin data-admin-upload{{/if}}>
	{{#if (or metadata.theme.config.content.pageHeader metadata.theme.config.content.pageSubtitle)}}
	<header id="home">
		<div class="header-bg"></div>
		<div class="pattern"></div>
		<div class="container">
			<div class="row">
				<div class="span4">
					{{#if metadata.theme.config.images.headerLogo}}
					<a class="logo"{{#if metadata.theme.config.content.contactWebsite}} href="{{ metadata.theme.config.content.contactWebsite }}" target="_blank"{{/if}}></a>
					{{/if}}
				</div>
			</div>
			<div class="row">
				<div class="span12">
					<div id="slidecaption">
						<h1>{{ markdown metadata.theme.config.content.pageHeader }}</h1>
						<h2>{{ markdown metadata.theme.config.content.pageSubtitle }}</h2>
					</div>
				</div>
			</div>
		</div>
	</header>
	{{/if}}
	<div class="wrapper">
		{{#>navbar}}
		{{#if (or (folders resource.root) resource.private)}}
		<ul id="fluid-nav" class="fluid-navigation visible-desktop">
			{{#if (or metadata.theme.config.content.pageHeader metadata.theme.config.content.pageSubtitle)}}
			<li><a class="scroll-link" href="#home">Home</a></li>
			{{/if}}
			{{#each (folders resource.root) as |folder|}}
			{{#if folder.contents}}
			<li><a class="scroll-link" href="#{{ slug (basename folder) }}">{{ strip-number-prefix folder }}</a></li>
			{{/if}}
			{{/each}}
			{{#if resource.private}}
			<li><a class="scroll-link external" href="{{#if metadata.preview}}javascript:;{{else}}{{ logoutUrl @root }}{{/if}}">Log out</a></li>
			{{/if}}
		</ul>
		{{/if}}
		{{/navbar}}
		<section class="pages">
			{{#if (or metadata.theme.config.content.introTitle metadata.theme.config.content.introText (files resource.root))}}
			<div class="page">
				<div class="container">
					<div class="row">
						<div class="span12">
							{{#if metadata.theme.config.content.introTitle}}
							<div class="title">{{ metadata.theme.config.content.introTitle }}</div>
							{{#if metadata.theme.config.content.introText}}
							<hr/>
							{{/if}}
							{{/if}}
							{{#if metadata.theme.config.content.introText}}
							<div class="lead-small">{{ markdown metadata.theme.config.content.introText }}</div>
							{{/if}}
							{{#if (files resource.root)}}
							<div class="posts row isotope">
								{{#each (files resource.root) as |file|}}
								{{>file file=file}}
								{{/each}}
							</div>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
			{{/if}}
			{{#each (folders resource.root) as |folder|}}
			<div id="{{ slug (basename folder) }}" class="page">
				<div class="container">
					<div class="row">
						<div class="span12"{{#if ../metadata.admin }} data-admin-upload="{{ folder.path }}"{{/if}}>
							<div class="title">{{ strip-number-prefix folder }}</div>
							<hr/>
							<div class="lead-small" data-section-header="{{ strip-number-prefix folder }}"></div>
							{{#if (folders folder)}}
							<ul class="option-set" data-option-key="filter">
								<li><a href="#filter" data-option-value="*" class="selected"><span></span>All</a></li>
								{{#each (folders folder) as |subfolder|}}
								{{#if subfolder.directory}}
								<li{{#if ../../metadata.admin }} data-admin-upload="{{ subfolder.path }}"{{/if}}><a href="#filter" data-option-value=".filter-{{ slug (basename subfolder) }}"><span></span>{{ strip-number-prefix subfolder }}</a></li>
								{{/if}}
								{{/each}}
							</ul>
							{{/if}}
							<div class="posts row isotope">
								{{#each (files folder) as |file|}}
								{{>file file=file}}
								{{/each}}
								{{#each (folders folder) as |subfolder|}}
								{{#each (files subfolder) as |file|}}
								{{>file file=file}}
								{{/each}}
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</section>
		<footer>
			{{#if (or
			metadata.theme.config.content.contactTitle
			metadata.theme.config.content.contactEmail
			metadata.theme.config.content.contactWebsite
			metadata.theme.config.content.contactPhone
			metadata.theme.config.content.contactAddress
			metadata.theme.config.content.footerTitle
			metadata.theme.config.content.footerText
			)}}
			<div class="footer">
				<div class="container">
					<div class="row">
						<div class="contact span6">
							<h5>{{ metadata.theme.config.content.contactTitle }}</h5>
							{{#if metadata.theme.config.content.contactEmail}}
							<p><strong>E-mail:</strong> <a class="white-text" href="mailto:{{ metadata.theme.config.content.contactEmail }}">{{ metadata.theme.config.content.contactEmail }}</a></p>
							{{/if}}
							{{#if metadata.theme.config.content.contactWebsite}}
							<p><strong>Web:</strong> <a class="white-text" href="{{ metadata.theme.config.content.contactWebsite }}" target="_blank">{{ metadata.theme.config.content.contactWebsite }}</a></p>
							{{/if}}
							{{#if metadata.theme.config.content.contactPhone}}
							<p><strong>Phone:</strong> <span class="white-text">{{ metadata.theme.config.content.contactPhone }}</span></p>
							{{/if}}
							{{#if metadata.theme.config.content.contactAddress}}
							<p><strong>Location:</strong> <span class="white-text">{{ metadata.theme.config.content.contactAddress }}</span></p>
							{{/if}}
						</div>
						<div class="span2"></div>
						<div class="about span4">
							<h5>{{ metadata.theme.config.content.footerTitle }}</h5>
							{{ markdown metadata.theme.config.content.footerText }}
						</div>
					</div>
				</div>
			</div>
			{{/if}}
			{{>banner}}
		</footer>
	</div>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
	<script src="{{ resourceUrl @root 'js/main.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jquery.easing.min.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jquery.sticky.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jquery.scrollTo.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jquery.nav.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/selectnav.min.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jquery.flexslider.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jquery.parallax-1.1.3.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/mql.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/shortcodes.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jquery.fancybox.pack.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jquery.fancybox-media.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/jflickrfeed.js' }}"></script>
	<script src="{{ resourceUrl @root 'js/settings.js' }}"></script>
</body>
</html>
