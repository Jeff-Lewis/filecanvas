	<link rel="stylesheet" href="{{ resourceUrl 'css/base.css' }}">
	<style type="text/css">{{ theme.styles.css }}</style>
</head>

<body>

	<!-- Start Sticky Navigation -->
	<nav id="mainnav">
		<div class="container">
			<div class="row">
				<div class="span4">
					<a href="http://www.fathomlondon.com/" class="logo"><img src="{{ resourceUrl 'img/FathomLogoTiny.png' }}" alt=""></a>
				</div>
				<div class="span8">
				</div>
			</div>
		</div>
	</nav>
	<!-- End Sticky Navigation -->


	<section class="page">
		<div class="container">
			<div class="row">
				<form class="form-signin" role="form" action="{{ loginUrl }}" method="POST" autocomplete="off" style="text-align: center;">
					<h2 class="form-signin-heading">Sign in</h2>
					<div><input type="text" name="username" class="form-control" placeholder="Username" required autofocus></div>
					<div><input type="password" name="password" class="form-control" placeholder="Password" required></div>
					<div><button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button></div>
				</form>
			</div><!-- End of row -->
		</div><!-- End of container -->
	</section>

</body>

