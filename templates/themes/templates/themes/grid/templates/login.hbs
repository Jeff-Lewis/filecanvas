<html lang="en">
	<head>
		{{> head }}
	</head>
	<body>
		{{ partial 'sidebar' }}
		<div class="page clearfix">
			{{ partial 'login-form' }}
			<footer class="footer">
				{{> contact }}
				{{> banner }}
			</footer>
		</div>
		{{#if metadata.analytics.google}}
		{{ partial 'google-analytics' id=metadata.analytics.google }}
		{{/if}}
		{{#if metadata.analytics.segment}}
		{{ partial 'segment-analytics' id=metadata.analytics.segment user=null }}
		{{/if}}
	</body>
</html>
