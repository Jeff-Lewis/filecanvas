{
	"name": "Agency",
	"thumbnail": "thumbnail.png",
	"engine": "handlebars",
	"templates": {
		"index": "index.hbs",
		"login": "login.hbs"
	},
	"config": [
		{
			"name": "content",
			"label": "Text",
			"icon": "align-left",
			"fields": [
				{
					"name": "pageHeader",
					"type": "string",
					"default": "Your company",
					"label": "Page header",
					"editor": {
						"name": "input",
						"options": {
							"type": "text",
							"placeholder": "Main page header",
							"maxLength": 128,
							"rows": 3
						}
					}
				},
				{
					"name": "pageSubtitle",
					"type": "string",
					"default": "Your company slogan",
					"label": "Page subtitle",
					"editor": {
						"name": "textarea",
						"options": {
							"placeholder": "Main page subtitle",
							"maxLength": 256,
							"rows": 3
						}
					}
				},
				{
					"name": "introTitle",
					"type": "string",
					"default": "Welcome to your site",
					"label": "Intro title",
					"editor": {
						"name": "input",
						"options": {
							"type": "text",
							"placeholder": "Intro section title",
							"maxLength": 128
						}
					}
				},
				{
					"name": "introText",
					"type": "string",
					"default": "Looks like you've created a brand new Shunt site! This page will automatically sync its contents to whatever's in the linked site folder.\n\n**Pro tip:** move your files into subfolders to display them in separate categories.",
					"label": "Intro text",
					"editor": {
						"name": "textarea",
						"options": {
							"placeholder": "Intro section content",
							"maxLength": 1024,
							"rows": 3
						}
					}
				},
				{
					"name": "footerTitle",
					"type": "string",
					"default": "About us",
					"label": "Footer title",
					"editor": {
						"name": "input",
						"options": {
							"type": "text",
							"placeholder": "Page footer title",
							"maxLength": 128
						}
					}
				},
				{
					"name": "footerText",
					"type": "string",
					"default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
					"label": "Footer text",
					"editor": {
						"name": "textarea",
						"options": {
							"placeholder": "Page footer content",
							"maxLength": 256,
							"rows": 3
						}
					}
				},
				{
					"name": "contactTitle",
					"type": "string",
					"default": "Contact us",
					"label": "Contact section title",
					"editor": {
						"name": "input",
						"options": {
							"type": "text",
							"placeholder": "Contact section title",
							"maxLength": 128
						}
					}
				},
				{
					"name": "contactEmail",
					"type": "string",
					"default": "info@example.com",
					"label": "Contact: Email",
					"editor": {
						"name": "input",
						"options": {
							"type": "email",
							"placeholder": "Email address",
							"maxLength": 128
						}
					}
				},
				{
					"name": "contactWebsite",
					"type": "url",
					"default": "http://www.example.com/",
					"label": "Contact: Website",
					"editor": {
						"name": "input",
						"options": {
							"type": "url",
							"placeholder": "Web address",
							"maxLength": 128
						}
					}
				},
				{
					"name": "contactPhone",
					"type": "string",
					"default": "+44 (0)123 456 7890",
					"label": "Contact: Phone",
					"editor": {
						"name": "input",
						"options": {
							"type": "tel",
							"placeholder": "Phone number",
							"maxLength": 128
						}
					}
				},
				{
					"name": "contactAddress",
					"type": "string",
					"default": "123 Address St, London, E1 1AA",
					"label": "Contact: Address",
					"editor": {
						"name": "input",
						"options": {
							"type": "text",
							"placeholder": "Street address",
							"maxLength": 128
						}
					}
				}
			]
		},
		{
			"name": "colors",
			"label": "Colours",
			"icon": "paint-brush",
			"fields": [
				{
					"name": "brandColor",
					"type": "color",
					"default": "#aa0000",
					"label": "Brand colour",
					"editor": {
						"name": "colorpicker",
						"options": {
							"format": "hex",
							"placeholder": null,
							"presets": null
						}
					}
				},
				{
					"name": "navItemColor",
					"type": "color",
					"default": "#ffffff",
					"label": "Navigation item",
					"editor": {
						"name": "colorpicker",
						"options": {
							"format": "hex",
							"placeholder": null,
							"presets": null
						}
					}
				},
				{
					"name": "navItemRolloverColor",
					"type": "color",
					"default": "#ffcccc",
					"label": "Navigation item (rollover)",
					"editor": {
						"name": "colorpicker",
						"options": {
							"format": "hex",
							"placeholder": null,
							"presets": null
						}
					}
				},
				{
					"name": "navItemSelectedColor",
					"type": "color",
					"default": "#000000",
					"label": "Navigation item (selected)",
					"editor": {
						"name": "colorpicker",
						"options": {
							"format": "hex",
							"placeholder": null,
							"presets": null
						}
					}
				}
			]
		},
		{
			"name": "images",
			"label": "Images",
			"icon": "picture-o",
			"fields": [
				{
					"name": "navLogo",
					"type": "string",
					"default": null,
					"label": "Navigation bar logo",
					"editor": {
						"name": "input",
						"options": {
							"type": "string",
							"placeholder": "Enter a URL",
							"maxLength": 4096
						}
					}
				},
				{
					"name": "headerLogo",
					"type": "string",
					"default": null,
					"label": "Header logo",
					"editor": {
						"name": "input",
						"options": {
							"type": "string",
							"placeholder": "Enter a URL",
							"maxLength": 4096
						}
					}
				}
			]
		},
		{
			"name": "browser",
			"label": "Browser",
			"icon": "desktop",
			"fields": [
				{
					"name": "title",
					"type": "string",
					"default": "<%= site.label %>",
					"label": "Tab title",
					"editor": {
						"name": "input",
						"options": {
							"type": "text",
							"placeholder": "Tab title",
							"maxLength": 128
						}
					}
				}
			]
		},
		{
			"name": "scripts",
			"label": "Custom scripts",
			"icon": "code",
			"fields": [
				{
					"name": "css",
					"type": "css",
					"default": null,
					"label": "Custom CSS rules",
					"editor": {
						"name": "code",
						"options": {
							"language": "css",
							"placeholder": "Paste custom CSS rules here",
							"maxLength": 4096,
							"rows": 6
						}
					}
				}
			]
		}
	]
}
