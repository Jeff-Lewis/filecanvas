{{#> index}}
	{{#*inline 'content'}}
		<div class="theme-gallery">
			<div class="title-bar">
				<div class="title-bar-header">
					<div class="title-bar-header-title">
						<div class="brand">
							<h3 class="brand-logo"><a href="/">Shunt</a></h3>
						</div>
					</div>
					<h3 class="title-bar-header-subtitle">Theme gallery</h3>
				</div>
				<div class="title-bar-controls">
					<a class="btn btn-default" href="/{{ content.previousTheme.id }}">Previous theme<a>
					<a class="btn btn-default" href="/{{ content.nextTheme.id }}">Next theme<a>
					<a class="btn btn-success bold" href="/{{ content.theme.id }}/edit">Use this theme</a>
				</div>
				<div class="title-bar-title">
					Current theme:
					<select class="title-bar-dropdown form-control" data-navigation-dropdown>
						{{#each content.themes as |theme|}}
						<option value="{{ theme.id }}"{{#if (eq theme.id ../content.theme.id)}} selected="selected"{{/if}} data-href="/{{ theme.id }}">{{ theme.name }}</option>
						{{/each}}
					</select>
				</div>
			</div>
			<div class="theme-gallery-main">
				<iframe class="theme-gallery-preview" frameborder="0" src="/{{ content.theme.id }}/preview"></iframe>
			</div>
		</div>
	{{/inline}}
{{/index}}
