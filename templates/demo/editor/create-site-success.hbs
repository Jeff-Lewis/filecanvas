{{#>index title='Site published' blank=true borderless=true}}
	{{#*inline 'content'}}
		{{#if content.site.published}}
		<div class="alert alert-block alert-success">
			<i class="pull-left fa fa-check"></i>
			<div>
				<h5 class="mb5">Congratulations! You've just published your first canvas.</h5>
				<p>See it in action at <strong><a href="{{ session.urls.webroot }}{{ content.site.name }}" target="_blank">{{ session.urls.webroot }}{{ content.site.name }}</a></strong></p>
			</div>
		</div>
		{{else}}
		<div class="alert alert-success">
			<i class="pull-left fa fa-check"></i>
			<div>
				<h5>Congratulations! You've just created your first canvas.</h5>
			</div>
		</div>
		{{/if}}
		<div class="ml5">
			<p>You can edit your canvas at any time in the <a href="{{ session.urls.admin.root }}" target="_top">Filecanvas admin area</a>.</p>
			<p>Enjoy using Filecanvas!</p>
			<p> &nbsp;â€“ The Filecanvas Team</p>
			<div class="mt30 text-center">
				<a href="{{ session.urls.admin.root }}" class="btn btn-primary" target="_top">Go to the admin area</a>
			</div>
		</div>
	{{/inline}}
{{/index}}
