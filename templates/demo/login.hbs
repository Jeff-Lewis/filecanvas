{{#>index title='Link account' overlay=true borderless=true}}
	{{#*inline 'content'}}
		<div class="row no-margin">
			<div class="col-sm-12 text-center mb15">
				<h5>Connect to an online storage provider to add files to this canvas:</h5>
			</div>
			<div class="col-sm-12 col-md-8 col-lg-6 col-centered">
				{{>login-form loginUrl=session.urls.demo.login redirect=content.redirect adapters=content.adapters state=content.state buttonColor='default' stacked=false}}
			</div>
			<div class="col-sm-12 text-center mt15">
				<p>By signing in to a provider, you agree to Filecanvas's <a href="{{ session.urls.admin.terms }}" target="_blank">Terms and Conditions</a>.</p>
			</div>
		</div>
	{{/inline}}
{{/index}}
