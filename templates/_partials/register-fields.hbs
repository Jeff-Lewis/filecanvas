<div class="form-group">
	<label class="{{#if modal}}col-sm-3{{else}}col-sm-2{{/if}} control-label">Username</label>
	<div class="{{#if modal}}col-sm-9{{else}}col-sm-10{{/if}}">
		<input type="text" class="form-control"
			name="username"
			placeholder="Username"
			value="{{ user.username }}"
			data-bind-id="username"
			data-parser="slug"
			data-validate="slug"
		/>
		<span class="form-control-feedback fa" aria-hidden="true"></span>
		<p class="help-block">Your Filecanvas web root will be {{ replace session.urls.domain '$0' (wrap user.username '<strong data-bind-value="username">' '</strong>') }}</p>
	</div>
</div>
<div class="form-group">
	<label class="{{#if modal}}col-sm-3{{else}}col-sm-2{{/if}} control-label">Name</label>
	<div class="{{#if modal}}col-sm-4{{else}}col-sm-4{{/if}}">
		<input type="text" class="form-control"
			name="firstName"
			placeholder="First name"
			value="{{ user.firstName }}"
			data-validate="notEmpty"
		/>
		<span class="form-control-feedback fa" aria-hidden="true"></span>
	</div>
	<div class="{{#if modal}}col-sm-5{{else}}col-sm-6{{/if}}">
		<input type="text" class="form-control"
			name="lastName"
			placeholder="Last name"
			value="{{ user.lastName }}"
		/>
		<span class="form-control-feedback fa" aria-hidden="true"></span>
	</div>
</div>
<div class="form-group">
	<label class="{{#if modal}}col-sm-3{{else}}col-sm-2{{/if}} control-label">Email</label>
	<div class="{{#if modal}}col-sm-9{{else}}col-sm-10{{/if}}">
		<input type="text" class="form-control"
			name="email"
			placeholder="Email address"
			value="{{ user.email }}"
			data-validate="email"
		/>
		<span class="form-control-feedback fa" aria-hidden="true"></span>
	</div>
</div>
