<div class="form-group">
	<label class="col-sm-2 control-label">Username</label>
	<div class="col-sm-10">
		<input type="text" class="form-control"
			name="username"
			placeholder="Username"
			value="{{ user.username }}"
			data-bind-id="username"
			data-parser="slug"
			data-validate="slug"
		/>
		<span class="form-control-feedback fa" aria-hidden="true"></span>
		<p class="help-block">Your Filecanvas web root will be {{ replace session.urls.domain '$0' (wrap user.username '<strong data-bind-value="username">' '</strong>') }}</p>
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Name</label>
	<div class="col-sm-4">
		<input type="text" class="form-control"
			name="firstName"
			placeholder="First name"
			value="{{ user.firstName }}"
			data-validate="notEmpty"
		/>
		<span class="form-control-feedback fa" aria-hidden="true"></span>
	</div>
	<div class="col-sm-6">
		<input type="text" class="form-control"
			name="lastName"
			placeholder="Last name"
			value="{{ user.lastName }}"
		/>
		<span class="form-control-feedback fa" aria-hidden="true"></span>
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Email</label>
	<div class="col-sm-10">
		<input type="text" class="form-control"
			name="email"
			placeholder="Email address"
			value="{{ user.email }}"
			data-validate="email"
		/>
		<span class="form-control-feedback fa" aria-hidden="true"></span>
	</div>
</div>
<div class="form-group">
	<div class="text-center">
		<div class="checkbox">
			<label>
				<input type="checkbox"
					data-bind-id="confirm-terms"
				/>I agree to the <a href="{{ session.urls.admin.terms }}" target="_blank">terms and conditions</a>
			</label>
		</div>
		<button type="submit" class="btn btn-success mt15" disabled="disabled"
			data-bind-value="confirm-terms"
		>Create account</button>
	</div>
</div>
