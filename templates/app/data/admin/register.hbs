{{#>index title='Your profile' footer=true header=true headerTitle='Create account'}}
	{{#*inline 'content'}}
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
				<div class="register-panel panel panel-primary mb25">
					<div class="panel-heading border">
						<h4 class="no-margin text-uppercase">Your profile</h4>
					</div>
					<div class="panel-body">
						<div class="row no-margin">
							<div class="col-lg-12">
								<form class="form-horizontal bordered-group" role="form" method="POST" action="{{ session.urls.admin.register }}" autocomplete="off">
									<input type="hidden" name="_method" value="POST"/>
									{{> register-fields user=content.user}}
									<div class="form-group">
										<div class="text-center">
											<div class="checkbox">
												<label>
													<input type="checkbox"
														data-bind-id="confirm-terms"
													/>
													<span class="checkbox-label">I agree to the <a href="{{ session.urls.www.terms }}" target="_blank">terms and conditions</a></span>
												</label>
											</div>
											<button type="submit" class="btn btn-success mt15" disabled="disabled"
												data-bind-value="confirm-terms"
											>Create account</button>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{{/inline}}
{{/index}}
