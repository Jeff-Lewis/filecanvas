{
	"AWSEBDockerrunVersion": 2,
	"volumes": [
		{
			"name": "www",
			"host": {
				"sourcePath": "/var/app/current/volumes/www"
			}
		}
	],
	"containerDefinitions": [
		{
			"name": "templates",
			"image": "filecanvas/templates:latest",
			"essential": false,
			"memory": 4
		},
		{
			"name": "router",
			"image": "filecanvas/router:latest",
			"essential": true,
			"memory": 124,
			"links": [
				"app"
			],
			"volumesFrom": [
				{
					"sourceContainer": "templates"
				}
			],
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 8080
				}
			],
			"mountPoints": [
				{
					"sourceVolume": "www",
					"containerPath": "/var/www"
				},
				{
					"sourceVolume": "awseb-logs-router",
					"containerPath": "/var/log/nginx"
				}
			]
		},
		{
			"name": "app",
			"image": "filecanvas/app:latest",
			"essential": true,
			"memory": 768,
			"volumesFrom": [
				{
					"sourceContainer": "templates"
				}
			],
			"portMappings": [
				{
					"hostPort": 8081,
					"containerPort": 8081
				}
			],
			"mountPoints": [
				{
					"sourceVolume": "www",
					"containerPath": "/var/www"
				},
				{
					"sourceVolume": "awseb-logs-app",
					"containerPath": "/var/log/nodejs"
				}
			],
			"environment": [
				{
					"name": "PORT",
					"value": "8081"
				},
				{
					"name": "TEMPLATES_APP",
					"value": "/var/templates/app"
				},
				{
					"name": "TEMPLATES_SITE",
					"value": "/var/templates/site"
				},
				{
					"name": "TEMPLATES_WWW",
					"value": "/var/templates/www"
				},
				{
					"name": "THEMES_ROOT",
					"value": "/var/templates/themes/themes"
				},
				{
					"name": "WWW_SITE_ROOT",
					"value": "/var/www"
				}
			]
		}
	]
}
