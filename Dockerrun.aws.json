{
	"AWSEBDockerrunVersion": 2,
	"volumes": [
		{
			"name": "assets-www",
			"host": {
				"sourcePath": "/var/app/current/data/www"
			}
		},
		{
			"name": "assets-admin",
			"host": {
				"sourcePath": "/var/app/current/templates/admin/assets"
			}
		},
		{
			"name": "themes",
			"host": {
				"sourcePath": "/var/app/current/themes"
			}
		}
	],
	"containerDefinitions": [
		{
			"name": "router",
			"image": "filecanvas/router:latest",
			"essential": true,
			"memory": 128,
			"mountPoints": [
				{
					"sourceVolume": "assets-www",
					"containerPath": "/var/www/subdomains/www"
				},
				{
					"sourceVolume": "assets-admin",
					"containerPath": "/var/www/subdomains/assets/admin"
				},
				{
					"sourceVolume": "themes",
					"containerPath": "/var/www/subdomains/themes"
				},
				{
					"sourceVolume": "awseb-logs-router",
					"containerPath": "/var/log/nginx"
				}
			],
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 8080
				}
			],
			"links": [
				"app"
			]
		},
		{
			"name": "app",
			"image": "filecanvas/app:latest",
			"essential": true,
			"memory": 768,
			"environment": [
				{
					"name": "PORT",
					"value": "8081"
				}
			],
			"mountPoints": [
				{
					"sourceVolume": "assets-www",
					"containerPath": "/var/www"
				},
				{
					"sourceVolume": "themes",
					"containerPath": "/var/themes"
				},
				{
					"sourceVolume": "awseb-logs-app",
					"containerPath": "/var/log/nodejs"
				}
			],
			"portMappings": [
				{
					"hostPort": 8081,
					"containerPort": 8081
				}
			]
		}
	]
}
